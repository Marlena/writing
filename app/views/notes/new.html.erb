<h1>my new note</h1>


<%= form_for @note do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", autofocus: true %>
    </div>
    <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control" %>
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
<% end %>
